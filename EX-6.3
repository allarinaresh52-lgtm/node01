import express from "express";
import mongoose from "mongoose";
import dotenv from "dotenv";
import cors from "cors";

dotenv.config();
const app = express();
app.use(express.json());
app.use(cors());

// ---------- MongoDB Connection ----------
const connectDB = async () => {
  try {
    const conn = await mongoose.connect(process.env.MONGO_URI || "mongodb://localhost:27017/accountTransferDB", {
      useNewUrlParser: true,
      useUnifiedTopology: true
    });
    console.log(`âœ… MongoDB Connected: ${conn.connection.host}`);
  } catch (error) {
    console.error(`âŒ Connection Error: ${error.message}`);
    process.exit(1);
  }
};
connectDB();

// ---------- Schema ----------
const accountSchema = new mongoose.Schema({
  name: { type: String, required: true },
  balance: { type: Number, required: true }
});

const Account = mongoose.model("Account", accountSchema);

// ---------- API: Create Sample Accounts ----------
app.post("/api/createSampleAccounts", async (req, res) => {
  try {
    await Account.deleteMany({}); // reset database

    const sampleAccounts = [
      { name: "Alice", balance: 1000 },
      { name: "Bob", balance: 500 }
    ];

    const created = await Account.insertMany(sampleAccounts);
    res.status(201).json({ message: "âœ… Sample accounts created", data: created });
  } catch (error) {
    res.status(500).json({ message: "âŒ Failed to create sample accounts", error: error.message });
  }
});

// ---------- API: Transfer Money ----------
app.post("/api/transfer", async (req, res) => {
  try {
    const { fromName, toName, amount } = req.body;

    // 1ï¸âƒ£ Validate input
    if (!fromName || !toName || !amount) {
      return res.status(400).json({ message: "âš ï¸ Please provide fromName, toName, and amount" });
    }

    if (amount <= 0) {
      return res.status(400).json({ message: "âš ï¸ Transfer amount must be greater than zero" });
    }

    // 2ï¸âƒ£ Fetch both accounts
    const sender = await Account.findOne({ name: fromName });
    const receiver = await Account.findOne({ name: toName });

    if (!sender || !receiver) {
      return res.status(404).json({ message: "âŒ Sender or receiver account not found" });
    }

    // 3ï¸âƒ£ Check sender balance
    if (sender.balance < amount) {
      return res.status(400).json({
        message: "âŒ Insufficient balance",
        senderBalance: sender.balance,
        attemptedTransfer: amount
      });
    }

    // 4ï¸âƒ£ Perform sequential updates (no transactions)
    sender.balance -= amount;
    receiver.balance += amount;

    await sender.save();
    await receiver.save();

    res.status(200).json({
      message: "âœ… Transfer successful",
      from: sender.name,
      to: receiver.name,
      amount,
      newSenderBalance: sender.balance,
      newReceiverBalance: receiver.balance
    });
  } catch (error) {
    res.status(500).json({ message: "âŒ Transfer failed", error: error.message });
  }
});

// ---------- API: View All Accounts ----------
app.get("/api/accounts", async (req, res) => {
  try {
    const accounts = await Account.find();
    res.status(200).json({ message: "âœ… Account List", data: accounts });
  } catch (error) {
    res.status(500).json({ message: "âŒ Failed to fetch accounts", error: error.message });
  }
});

// ---------- Root Route ----------
app.get("/", (req, res) => {
  res.send("ğŸ’¸ Account Transfer System API is Running...");
});

// ---------- Start Server ----------
const PORT = process.env.PORT || 5000;
app.listen(PORT, () => console.log(`ğŸš€ Server running on port ${PORT}`));
